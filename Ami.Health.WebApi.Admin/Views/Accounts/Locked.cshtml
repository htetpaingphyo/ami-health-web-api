@model IEnumerable<Ami.Health.WebApi.Admin.Models.AccountStatusModel>

@{
    ViewData["Title"] = "Locked";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Locked</h2>

<p>
    <a class="btn btn-default" asp-action="Register">Register New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PolicyNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NRC)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DOB)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountStatus)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NRC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountStatus)
            </td>
            <td>
                <a asp-action="Unlock" asp-route-id="@item.Id">Unlock</a> |
                <a asp-action="Deactivate" asp-route-id="@item.Id">Deactivate</a>
            </td>
        </tr>
}
    </tbody>
</table>
